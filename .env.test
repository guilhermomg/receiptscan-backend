# Application Configuration
NODE_ENV=test
PORT=3000
ENVIRONMENT=test

# Logging
LOG_LEVEL=warn

# API Configuration
API_PREFIX=/api/v1
API_DOMAIN=https://api-test.receiptscan.ai

# Security Configuration
# Comma-separated list of allowed CORS origins
CORS_ORIGINS=https://test.receiptscan.ai,https://receiptscan-test.web.app
# Maximum request body size (prevents payload attacks)
MAX_REQUEST_SIZE=10mb

# Firebase Configuration (receiptscan-test)
FIREBASE_PROJECT_ID=receiptscan-test
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@receiptscan-test.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_STORAGE_BUCKET=receiptscan-test.appspot.com

# OpenAI Configuration (Test API Key)
OPENAI_API_KEY=your-openai-api-key-test
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-test
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-test
STRIPE_PRO_PRICE_ID=price_test_xxxxxxxxxxxxx
FRONTEND_URL=https://test.receiptscan.ai

# Deployment Metadata
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_COMMIT_SHA=
DEPLOYMENT_TIMESTAMP=

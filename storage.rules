rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    function isValidReceiptFile() {
      return (isImage() || isPDF()) && 
             request.resource.size <= 10 * 1024 * 1024; // 10MB limit
    }
    
    // Receipt images
    match /receipts/{userId}/{receiptId}/{fileName} {
      // Users can read their own receipts
      allow read: if isOwner(userId);
      
      // Users can upload receipts (images/PDFs only, max 10MB)
      allow create: if isOwner(userId) && isValidReceiptFile();
      
      // Users can update their own receipts
      allow update: if isOwner(userId) && isValidReceiptFile();
      
      // Users can delete their own receipts
      allow delete: if isOwner(userId);
    }
    
    // Profile images
    match /profiles/{userId}/{fileName} {
      allow read: if true; // Public read
      
      // Users can only upload/update their own profile image
      allow create, update: if isOwner(userId) && 
                               isImage() &&
                               request.resource.size <= 5 * 1024 * 1024; // 5MB limit
      
      allow delete: if isOwner(userId);
    }
    
    // Temporary uploads (auto-delete after 24 hours)
    match /temp/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && 
                       isValidReceiptFile() &&
                       request.resource.metadata.expiresAt != null;
      allow delete: if isOwner(userId);
    }
    
    // Admin/system files (API key protected)
    match /system/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side operations
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

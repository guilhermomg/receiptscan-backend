# Application Configuration
NODE_ENV=production
PORT=3000
ENVIRONMENT=prd

# Logging
LOG_LEVEL=info

# API Configuration
API_PREFIX=/api/v1
API_DOMAIN=https://api.receiptscan.ai

# Security Configuration
# Comma-separated list of allowed CORS origins
CORS_ORIGINS=https://receiptscan.ai,https://www.receiptscan.ai,https://receiptscan-prd.web.app
# Maximum request body size (prevents payload attacks)
MAX_REQUEST_SIZE=10mb

# Firebase Configuration (receiptscan-prd)
FIREBASE_PROJECT_ID=receiptscan-prd
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@receiptscan-prd.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_STORAGE_BUCKET=receiptscan-prd.appspot.com

# OpenAI Configuration (Production API Key)
OPENAI_API_KEY=your-openai-api-key-prod
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# Stripe Configuration (Live Mode)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PRO_PRICE_ID=price_live_xxxxxxxxxxxxx
FRONTEND_URL=https://receiptscan.ai

# Deployment Metadata
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_COMMIT_SHA=
DEPLOYMENT_TIMESTAMP=

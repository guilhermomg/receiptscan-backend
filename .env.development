# Application Configuration
NODE_ENV=development
PORT=3000
ENVIRONMENT=dev

# Logging
LOG_LEVEL=debug

# API Configuration
API_PREFIX=/api/v1
API_DOMAIN=http://localhost:3000

# Security Configuration
# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
# Maximum request body size (prevents payload attacks)
MAX_REQUEST_SIZE=10mb

# Firebase Configuration (receiptscan-dev)
FIREBASE_PROJECT_ID=receiptscan-dev
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@receiptscan-dev.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_STORAGE_BUCKET=receiptscan-dev.appspot.com

# OpenAI Configuration (Dev API Key)
OPENAI_API_KEY=your-openai-api-key-dev
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_PRO_PRICE_ID=price_test_xxxxxxxxxxxxx
FRONTEND_URL=http://localhost:3001

# Deployment Metadata
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_COMMIT_SHA=local
DEPLOYMENT_TIMESTAMP=local
